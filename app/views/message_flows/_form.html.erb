<%= form_for @message_flow, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :message_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :message_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :flow_order, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :flow_order, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_received, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :date_received, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_resolved, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :date_resolved, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :response_choice_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :response_choice_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :response_notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :response_notes, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            message_flows_path, :class => 'btn btn-default' %>
 
<% end %>
