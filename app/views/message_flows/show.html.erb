<%- model_class = MessageFlow -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:message_id) %>:</strong></dt>
  <dd><%= @message_flow.message_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flow_order) %>:</strong></dt>
  <dd><%= @message_flow.flow_order %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @message_flow.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_received) %>:</strong></dt>
  <dd><%= @message_flow.date_received %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_resolved) %>:</strong></dt>
  <dd><%= @message_flow.date_resolved %></dd>
  <dt><strong><%= model_class.human_attribute_name(:response_choice_id) %>:</strong></dt>
  <dd><%= @message_flow.response_choice_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:response_notes) %>:</strong></dt>
  <dd><%= @message_flow.response_notes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              message_flows_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_message_flow_path(@message_flow), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              message_flow_path(@message_flow),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
