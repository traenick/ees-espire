

<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#">Pending <span class="badge"><%= @messages.count %></span></a></li>
      <li><a href="#">Archived</a></li>
    </ul>

  </div>
</div>


<div id="back-to-list-button" class="hidden-md hidden-lg">
  <p><%= link_to '<< Back to List',show_list_path,class:'btn btn-default',remote:true %></p>
</div>

<br/>


<div class="row">
    <div id='message-digest' class="col-md-8">
      <div >
        <%= render :partial => 'message_digest' %>
      </div>
    </div>
    <div class="col-md-4">
      <div id='selected-message-detail'>
        <%= render :partial => 'selected_message_detail' %>
      </div>
    </div>
</div>



<% if params[:show_json] == 'show' %>

    <div class="row">
      <div class="col-md-6">
        <h3>Digest JSON:</h3>
        <div id='digest-json-URL-form'>
          <%= render :partial => 'digest_json_url_form' %>
        </div>
        <br/>
        <div id='digest-json-form'>
          <%= render :partial => 'digest_json_form' %>
        </div>
      </div>
      <div class="col-md-6">
        <h3>Selected Message JSON:</h3>
        <div id='message-json-url-form'>
          <%= render :partial => 'message_json_url_form' %>
        </div>
        <br/>
        <div id='selected-message-json-string'>
          <%= render :partial => 'selected_message_json_string' %>
        </div>
      </div>

    </div>

<% end %>



