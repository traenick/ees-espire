<%= form_for @message_sub_type, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :message_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:message_type_id, @message_types, :id, :name, :include_blank => "Please select") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sub_type_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sub_type_name, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            message_sub_types_path, :class => 'btn btn-default' %>
 
<% end %>
