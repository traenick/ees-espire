<%= form_for @response_choice, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :message_sub_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :message_sub_type_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :display_order, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :display_order, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :button_title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :button_title, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :button_style, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :button_style, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :api_string, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :api_string, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :note_required, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :note_required, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            response_choices_path, :class => 'btn btn-default' %>
 
<% end %>
