<%- model_class = ResponseChoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:message_sub_type_id) %></th>
      <th><%= model_class.human_attribute_name(:display_order) %></th>
      <th><%= model_class.human_attribute_name(:button_title) %></th>
      <th><%= model_class.human_attribute_name(:button_style) %></th>
      <th><%= model_class.human_attribute_name(:api_string) %></th>
      <th><%= model_class.human_attribute_name(:note_required) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @response_choices.each do |response_choice| %>
      <tr>
        <td><%= link_to response_choice.id, response_choice_path(response_choice) %></td>
        <td><%= response_choice.message_sub_type_id %></td>
        <td><%= response_choice.display_order %></td>
        <td><%= response_choice.button_title %></td>
        <td><%= response_choice.button_style %></td>
        <td><%= response_choice.api_string %></td>
        <td><%= response_choice.note_required %></td>
        <td><%=l response_choice.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_response_choice_path(response_choice), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      response_choice_path(response_choice),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_response_choice_path,
            :class => 'btn btn-primary' %>
